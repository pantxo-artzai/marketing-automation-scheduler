<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Cron Job pour exécuter les activités planifiées -->
        <record id="ir_cron_execute_scheduled_activities" model="ir.cron">
            <field name="name">Marketing Automation: Execute Scheduled Activities</field>
            <field name="model_id" ref="model_marketing_automation_scheduler"/>
            <field name="state">code</field>
            <field name="code">model._cron_execute_scheduled_activities()</field>
            <field name="interval_number">15</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall">False</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo>
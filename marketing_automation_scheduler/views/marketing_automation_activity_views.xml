<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="marketing_automation_activity_form_inherit" model="ir.ui.view">
    <field name="name">marketing.activity.form.inherit.scheduler</field>
    <field name="model">marketing.activity</field>
    <field name="inherit_id" ref="marketing_automation.marketing_activity_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='trigger_type']" position="after">
          <group modifiers="{'invisible': [['activity_type','!=','server_action']]}">
              <field name="is_scheduled" widget="boolean_toggle"/>

              <separator string="Paramètres de planification"/>

              <field name="scheduled_quantity"/>
              <field name="schedule_frequency"/>
              <field name="interval_value"/>
              <field name="interval_unit"/>
              <field name="time_slot_start"/>
              <field name="time_slot_end"/>
              <field name="schedule_start_date"/>

              <separator string="Jours"/>
              <field name="monday"/>
              <field name="tuesday"/>
              <field name="wednesday"/>
              <field name="thursday"/>
              <field name="friday"/>
              <field name="saturday"/>
              <field name="sunday"/>

              <button name="action_generate_scheduled_activities"
                      type="object"
                      class="btn-primary"
                      string="Générer les activités planifiées"
                      modifiers="{'invisible': [['is_scheduled','=',False]]}"/>
          </group>
      </xpath>
    </field>
  </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="marketing_automation_activity_form_inherit" model="ir.ui.view">
    <field name="name">marketing.activity.form.inherit.scheduler</field>
    <field name="model">marketing.activity</field>
    <field name="inherit_id" ref="marketing_automation.marketing_activity_view_form"/>
    <field name="arch" type="xml">

      <xpath expr="//field[@name='trigger_type']" position="after">
        <!-- Activer la planification seulement pour les actions serveur -->
        <group string="Planification Avancée" attrs="{'invisible': [('activity_type', '!=', 'action')]}">
          <field name="is_scheduled"/>
        </group>

        <group string="Paramètres de Planification"
               attrs="{'invisible': ['|', ('is_scheduled', '=', False), ('activity_type', '!=', 'action')]}"
               col="2">
          <group string="Quantité et Fréquence">
            <field name="scheduled_quantity" attrs="{'required': [('is_scheduled', '=', True)]}"/>
            <field name="schedule_frequency" attrs="{'required': [('is_scheduled', '=', True)]}"/>
            <!-- Tes champs existants alignés avec le modèle -->
            <field name="interval_value" attrs="{'invisible': [('schedule_frequency', 'in', ('daily','monthly'))]}"/>
            <field name="interval_unit"/>
          </group>

          <group string="Créneaux &amp; Jours">
            <field name="time_slot_start"/>
            <field name="time_slot_end"/>
            <field name="monday"/><field name="tuesday"/><field name="wednesday"/>
            <field name="thursday"/><field name="friday"/><field name="saturday"/><field name="sunday"/>
            <field name="schedule_start_date"/>
          </group>
        </group>

        <!-- Liste des éléments générés -->
        <group string="Planification (Scheduler)" attrs="{'invisible': [('activity_type', '!=', 'action')]}">
          <field name="generated_scheduler_ids" context="{'default_activity_id': active_id}">
            <tree editable="bottom">
              <field name="name"/>
              <field name="state"/>
              <field name="scheduled_date"/>
              <field name="executed_date"/>
              <button name="action_execute_now" string="Exécuter" type="object"
                      attrs="{'invisible': [('state', '!=', 'scheduled')]}"/>
              <button name="action_reset_to_scheduled" string="Replanifier" type="object" icon="fa-refresh"
                      attrs="{'invisible': [('state', '=', 'scheduled')]}"/>
            </tree>
          </field>
          <!-- (optionnel) bouton pour générer depuis l'activité -->
          <button name="action_generate_scheduled_activities" type="object"
                  string="Générer les activités planifiées"
                  attrs="{'invisible': [('is_scheduled','=',False)]}"/>
        </group>
      </xpath>
    </field>
  </record>
</odoo>
